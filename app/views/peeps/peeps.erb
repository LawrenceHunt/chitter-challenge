
<% if !current_user %>
<form method='get' action='/sessions/new'>
  <input type='submit' value='Sign in'>
</form>
<% end %>


<% if current_user %>
<form method="post" action="/peeps">
  <input type="text" name="text" rows = "2" placeholder="What's peeping?" maxlength="140">
  <input type="submit" value="Peep">
</form>
<% end %>

<ul id='peeps'>
  <% if @peeps %>
    <% @peeps.each do |peep| %>
    <li>
      <%= peep.user.name %>--/-- <%= peep.timestamp.strftime("%H:%M, %A %d %B %Y") %><br/>
      <%= peep.text %>
      <ul>
      <% if !peep.responses.empty? %>
        <% peep.responses.each do |response| %>
            <li><%=response.user.name%>
            <%=response.timestamp.strftime('%Y-%m-%d %H:%M')%>
            <%=response.text%></li>
        <% end %>
      <% end %>


      <% if current_user %>
      <form method = "post" action="/responses/<%= peep.id %>">
        <input type="text" name="text" placeholder="Reply here" maxlength="140">
        <input type="submit" value="Reply">
      </form>
      <% end %>
    <% end %>
  <% end %>
  </li>
</ul>
